# ======================================
# CONFIGURATION DE BASE
# ======================================

# URL de connexion à MongoDB (format standard)
MONGO_URI=mongodb://localhost:27017/cityscape

# Clé secrète pour JWT (au moins 32 caractères)
JWT_SECRET=votre_clé_secrète_très_sécurisée_ici_123!

# Port d'écoute du serveur
PORT=5000

# Environnement d'exécution (development/production/test)
NODE_ENV=development

# ======================================
# OPTIONS DE SÉCURITÉ
# ======================================

# Durée de vie des tokens JWT (en secondes)
JWT_EXPIRES_IN=86400  # 24 heures

# Limite de requêtes par IP (pour rate limiting)
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes

# ======================================
# CONFIGURATION DES FIXTURES
# ======================================

# Nombre d'utilisateurs à générer (admin non inclus)
FIXTURE_USERS_COUNT=25

# Nombre de propriétés à générer
FIXTURE_PROPERTIES_COUNT=50

# ======================================
# OPTIONS DE DÉVELOPPEMENT
# ======================================

# Niveau de logs (error, warn, info, debug)
LOG_LEVEL=debug

# Activer/désactiver les logs MongoDB
MONGO_DEBUG=true

# ======================================
# CONFIGURATION AVANCÉE
# ======================================

# Timeout de connexion MongoDB (en ms)
MONGO_CONNECT_TIMEOUT=5000

# Pool de connexions MongoDB
MONGO_POOL_SIZE=10
MONGO_SOCKET_TIMEOUT=30000

# Options CORS (pour développement)
CORS_ORIGIN=http://localhost:3000

